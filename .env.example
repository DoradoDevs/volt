# MongoDB Configuration
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# Backend Configuration
JWT_SECRET=CHANGE_THIS_TO_RANDOM_STRING_AT_LEAST_32_CHARS
NODE_ENV=production
PORT=5000

# MongoDB Connection (for docker-compose, auto-configured)
MONGODB_URI=mongodb://admin:CHANGE_THIS_TO_SECURE_PASSWORD@mongodb:27017/volt?authSource=admin

# Solana RPC (use custom RPC for better performance)
SOLANA_RPC=https://api.mainnet-beta.solana.com

# Frontend URL (your domain)
FRONTEND_URL=https://yourdomain.com

# Email Configuration (for verification codes)
# Use Gmail App Password: https://support.google.com/accounts/answer/185833
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-16-char-app-password

